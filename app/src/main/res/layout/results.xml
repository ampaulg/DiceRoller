            android:id="@+id/defRollTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/zero"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/defChoiceGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/defOptionChoiceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/no_def_option_label"/>
        <TextView
            android:id="@+id/defOptionResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/zero"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/atkRollTotal2Group"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/atkRollTotal2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/atk_total_2_label"/>
