            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/zero"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/defChallengeResultGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/defChallengeResultLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/def_challenge_result_label"/>
        <TextView
            android:id="@+id/defChallengeResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/zero"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/defChallengeTotalGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/defChallengeTotalResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/def_challenge_total_label"/>
