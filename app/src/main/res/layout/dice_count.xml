<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/diceCountGroup"
    android:gravity="center_vertical" >
    <TextView
        android:id="@+id/atkDiceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/dice_question"
        android:tag="@string/dice_label_tag" />
    <Spinner
        android:id="@+id/atkDiceCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:tag="@string/dice_count_tag" />
    <TextView
        android:id="@+id/atkDiceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/dice_d6"
        android:tag="@string/dice_type_tag" />
</LinearLayout>